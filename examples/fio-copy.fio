[global]
threads=1
filename=fio-copy
size=128m

[writer]
rw=write
bs=128k
numjobs=1
offset=0
buffer_pattern=0xdeadbeef

[copier]
new_group
wait_for=writer
rw=copy
bs=16k
offset=0
dest_offset=256m
num_range=8
numjobs=1
ioengine=sctl

[reader]
new_group
wait_for=copier
rw=read
offset=256m
bs=128k
numjobs=1
verify=pattern
verify_pattern=0xdeadbeef
