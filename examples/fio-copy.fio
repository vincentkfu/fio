[global]
filename=fio-copy
filesize=256m

[writer]
rw=write
bs=128k
numjobs=1
offset=0
buffer_pattern=0xdeadbeef
io_size=128m

[copier]
new_group
wait_for=writer
rw=copy
bs=128k
offset=0
dest_offset=128m
numjobs=1
ioengine=psync
emulate=1
io_size=128m

[reader]
new_group
wait_for=copier
rw=read
bs=128k
numjobs=1
verify=pattern
verify_pattern=0xdeadbeef
